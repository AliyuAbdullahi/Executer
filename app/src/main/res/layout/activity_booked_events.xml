<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.uber.executer.activities.BookedEvents">

  <include
    layout="@layout/toolbar"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <TextView
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#999"
    android:gravity="center_horizontal"
    android:layout_below="@id/toolbar"
    android:id="@+id/booked_event_title"
    android:text="BOOKED EVENTS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookedlist"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/booked_event_title"/>
  <TextView
    android:textColor="#999"
    android:id="@+id/noeventavailable"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:textSize="32dp"
    android:text="No Event Available"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</RelativeLayout>
